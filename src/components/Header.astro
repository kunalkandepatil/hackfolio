---
import * as content from "../../content.json";
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
import github from "../assets/github.svg";
import instagram from "../assets/instagram.svg";
import linkedin from "../assets/linkedin.svg";
import twitter from "../assets/twitter.svg";
import youtube from "../assets/youtube.svg";
---

<div
    id="background"
    style={`background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%), url(${content.background});`}
>
</div>

<div id="header">
    <div class="center-content">
        <div class="logo">
            <Image
                alt={`${content.header.name} Logo`}
                width="100"
                height="100"
                src={logo}
                alt="Logo"
            />
        </div>

        <Image
            alt={`${content.header.name} Avatar`}
            width="100"
            height="100"
            src={content.header.avatar}
            alt="Avatar"
            class="avatar"
        />
        <h1>{content.header.name.toUpperCase()}</h1>
        <p>{content.header.description.toUpperCase()}</p>

        <div class="social">
            <a href="https://github.com/kunalkandepatil" target="_blank">
                <Image alt="GitHub Logo" width="30" height="30" src={github} />
            </a>
            <a href="https://instagram.com/kunalkandepatil" target="_blank">
                <Image
                    alt="Instagram Logo"
                    width="30"
                    height="30"
                    src={instagram}
                />
            </a>
            <a
                href="https://www.linkedin.com/in/kunalkandepatil/"
                target="_blank"
            >
                <Image
                    alt="LinkedIn Logo"
                    width="30"
                    height="30"
                    src={linkedin}
                />
            </a>
            <a href="https://x.com/kunalkandepatil" target="_blank">
                <Image
                    alt="Twitter Logo"
                    width="30"
                    height="30"
                    src={twitter}
                />
            </a>
        </div>
    </div>
</div>

<style>
    .social {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 20px;
        margin-top: 40px;
    }
    .logo {
        user-select: none;
        pointer-events: none;
        -webkit-user-drag: none;
    }
    #background {
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
        position: absolute;
        width: 100%;
        height: 1000px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: top;
        filter: blur(100px);
    }

    #header {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 720px;
        position: relative;
        z-index: 0;
        overflow: hidden;
    }

    .center-content {
        text-align: center;
        color: white;
        font-family: "Oswald", sans-serif;
        position: relative;
        z-index: 1;
    }

    .avatar {
        width: 190px;
        height: 190px;
        border-radius: 50%;
        margin-bottom: 20px;
        border: 15px solid rgba(0, 0, 0, 0);
        box-shadow: 0 0 0 2px rgb(255, 255, 255);
    }

    h1 {
        font-size: 40px;
        margin: 10px 0;
        font-weight: 400;
    }

    p {
        font-size: 25px;
        margin: 0;
        opacity: 0.8;
        font-weight: 300;
        opacity: 0.5;
    }

    @media screen and (max-width: 720px) {
        #header {
            height: 570px;
        }

        .avatar {
            width: 120px;
            height: 120px;
            border-width: 8px;
        }

        h1 {
            font-size: 28px;
        }

        p {
            font-size: 16px;
        }
    }
</style>
